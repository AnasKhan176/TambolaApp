    <ImageView
        android:id="@+id/top_img"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/logo"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/margin_20"
        android:layout_centerHorizontal="true"/>



    <LinearLayout
        android:id="@+id/mid_layout"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/margin_20"
        android:background="@drawable/shape_rounded_shadow"
        android:orientation="vertical">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_25"
            android:layout_marginEnd="@dimen/margin_20"
            android:background="@drawable/button_selector"
            android:onClick="actionPlay"
            android:text="How To Play Tambola"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_size_16" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_marginEnd="@dimen/margin_20"
            android:background="@drawable/button_selector"
            android:onClick="actionRule"
            android:text="Tambola Game Rules"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_size_16" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_marginEnd="@dimen/margin_20"
            android:background="@drawable/button_selector"
            android:onClick="actionWinning"
            android:text="Winning Patterns"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_size_16" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_marginEnd="@dimen/margin_20"
            android:background="@drawable/button_selector"
            android:onClick="actionPlayer"
            android:visibility="gone"
            android:text="Play As a Participator"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_size_16" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_marginEnd="@dimen/margin_20"
            android:layout_marginBottom="@dimen/margin_25"
            android:background="@drawable/button_selector"
            android:onClick="actionHost"
            android:text="Play As a Organizer"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_size_16" />
    </LinearLayout>
    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mid_layout"
        android:onClick="actionPolicy"
        android:layout_centerHorizontal="true"
        android:gravity="right"
        android:text="@string/text_privacy_policy"
        android:textColor="@color/highlight_color"
        android:textSize="@dimen/txt_size_16" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom|end"
            android:layout_marginRight="@dimen/margin_20"
            android:layout_marginBottom="@dimen/margin_35"
            android:background="@android:color/transparent"
            android:onClick="actionShare"
            android:src="@android:drawable/ic_menu_share" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/margin_5"
        android:text="Tambola App"
        android:textColor="@color/watermelon_red"
        android:textSize="@dimen/txt_size_14" />
</RelativeLayout>
